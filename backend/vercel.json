{
  "version": 2,
  "builds": [
    {
      "src": "src/api/index.ts",
      "use": "@vercel/node",
      "config": {
        "runtime": "nodejs20.x"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/src/api/index.ts"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "buildCommand": "cd .. && npm install --frozen-lockfile && npm run build --workspace=shared && cd backend && npx prisma generate && npm run build",
  "installCommand": "cd .. && npm install --frozen-lockfile"
}